<head>
  <meta charset="UTF-8" />
  <meta name="viewport" 
        content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
  <title>{{title}}</title>
  <style>
    html, body {
      margin: 0;
      height: 100%;
      overflow: hidden; /* âœ… Boâ€˜sh joyni scroll qilmaslik */
      background: radial-gradient(circle at center, #1a1a1a, #000);
      display: flex;
      justify-content: center;
      align-items: center;
      font-family: "Poppins", sans-serif;
      color: #fff;
      user-select: none;
      -webkit-user-select: none;
      -ms-user-select: none;
      -webkit-touch-callout: none;
      -webkit-text-size-adjust: none;
    }

    .mouse {
      width: 460px;
      height: 600px;
      background: #2a2a2a;
      border-radius: 180px;
      box-shadow: inset 0 4px 12px rgba(255,255,255,0.1),
                  0 8px 25px rgba(0,0,0,0.6);
      display: flex;
      flex-direction: column;
      overflow: hidden;
      position: relative;
      touch-action: none; /* âœ… Zoom va scrollni toâ€˜liq bloklaydi */
    }

    .buttons {
      display: flex;
      height: 180px;
    }

    .btn {
      flex: 1;
      background: #333;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 20px;
      border: none;
      outline: none;
      color: #fff;
      transition: background 0.15s;
      touch-action: manipulation;
    }

    .btn:active {
      background: #555;
      transform: scale(0.98);
    }

    .touchpad {
      flex: 1;
      background: #1b1b1b;
      border-top: 2px solid #111;
      touch-action: none;
    }

    .led {
      position: absolute;
      bottom: 10px;
      left: 50%;
      transform: translateX(-50%);
      width: 15px;
      height: 15px;
      background: red;
      border-radius: 50%;
      box-shadow: 0 0 10px red;
    }
  </style>
</head>
<body>
  <div class="mouse" id="mouse">
    <div class="buttons">
      <button class="btn" id="left">L</button>
      <button class="btn" id="right">R</button>
    </div>
    <div class="touchpad" id="touchpad"></div>
    <div class="led" id="led"></div>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();
    const touchpad = document.getElementById("touchpad");
    const led = document.getElementById("led");
    const leftBtn = document.getElementById("left");
    const rightBtn = document.getElementById("right");
    const mouse = document.getElementById("mouse");

    let lastX, lastY, lastTap = 0;

    // ðŸ”’ Zoomni bloklash (ikki marta teginganda)
    document.addEventListener("touchstart", function (e) {
      const currentTime = new Date().getTime();
      const tapLength = currentTime - lastTap;
      if (tapLength < 300 && tapLength > 0) {
        e.preventDefault(); // zoom yoki double-tap actionni toâ€˜xtatadi
      }
      lastTap = currentTime;
    });

    // ðŸ”µ Touchpad movement
    touchpad.addEventListener("touchstart", e => {
      const touch = e.touches[0];
      lastX = touch.clientX;
      lastY = touch.clientY;
    });

    touchpad.addEventListener("touchmove", e => {
      e.preventDefault();
      const touch = e.touches[0];
      const dx = touch.clientX - lastX;
      const dy = touch.clientY - lastY;
      lastX = touch.clientX;
      lastY = touch.clientY;

      socket.emit("move", { dx, dy });
    });

    // ðŸ–± Clicks
    leftBtn.addEventListener("click", () => {
      socket.emit("click", "left");
      flashLed();
    });

    rightBtn.addEventListener("click", () => {
      socket.emit("click", "right");
      flashLed();
    });

    function flashLed() {
      led.style.background = "lime";
      led.style.boxShadow = "0 0 15px lime";
      setTimeout(() => {
        led.style.background = "red";
        led.style.boxShadow = "0 0 10px red";
      }, 200);
    }
  </script>
</body>
